<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Checkout</title>
</head>
<body>
    <%- include('partials/navbar') %> 
    <div class="container mt-5">
        <h1>Checkout</h1>
        <ul class="list-group mb-3">
            <% let total = 0; %>
            <% cart.forEach(item => { %>
                <% total += item.painting.price * item.quantity; %>
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0"><%= item.painting.title %> by <%= item.painting.artist %></h6>
                        <small class="text-muted">Quantity: <%= item.quantity %></small>
                    </div>
                    <span class="text-muted">$<%= item.painting.price * item.quantity %></span>
                </li>
            <% }) %>
            <li class="list-group-item d-flex justify-content-between">
                <span>Total (USD)</span>
                <strong>$<%= total %></strong>
            </li>
        </ul>
        <form action="/checkout" method="POST">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Confirm Order</button>
        </form>
    </div>
</body>
</html>
